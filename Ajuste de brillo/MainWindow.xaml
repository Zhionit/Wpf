<Window x:Class="Ajuste_de_brillo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock Text="Ajuste de brillo usando C#" Margin="121,32,88,248" FontSize="25"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="152,102,0,0" VerticalAlignment="Top" Width="243" Height="23" Maximum="100" Value="{Binding ValorSlider}" ValueChanged="slider_ValueChanged" />
        <TextBlock Text="Brillo actual:" FontSize="17" Margin="121,138,298,152"/>
        <TextBox x:Name="txtPorcentaje" Text="{Binding ValorSlider}" Margin="219,130,232,138" Padding="10,10,10,10" FontSize="15"/>
    </Grid>
</Window>
